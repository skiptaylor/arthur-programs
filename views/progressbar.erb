<%
	offset ||= false

	percent = ((correct.to_f/possible.to_f)*100)#.to_i
	
	style = 'progress'
	style = 'progress' if percent > 60
	style = 'progress' if percent > 80
%>

<div class="span5 <%= 'offset1' if offset == true %>">
	<%= label %>:
	
	<%= correct %>/<%= possible %> points
	
	<div class="progress <%= style %>">
		<div class="bar" style="width: <%= percent %>%; line-height: 1.7em;"><%= percent = ((correct.to_f/possible.to_f)*100).to_i %>%</div>
	</div>
</div>