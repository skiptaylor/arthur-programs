<div class="row">

	<div class="span3">
		<%= erb :'admin/navigation', layout: false %>
	</div>

	<div class="span9">
		<ul class="breadcrumb">
			<li>Admin <span class="divider">/</span></li>
			<li>Manuals <span class="divider">/</span></li>
			<li class="active">Chapters</li>
		</ul>
		
		<h1><%= @manual.name %> - <%= @section.section_title %> - Chapter</h1>
		<hr />

			<form class="form-horizontal" method="post">
				<fieldset>
					<div class="control-group">
						<label class="control-label" for="chapter_number">Number</label>
						<div class="controls">
							<input type="text" name="chapter_number" id="chapter_number" class="span2" value="<%= @chapter.chapter_number %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="chapter_title">Title</label>
						<div class="controls">
							<input type="text" name="chapter_title" id="chapter_title" class="span7" value="<%= @chapter.chapter_title %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="body">Body</label>
						<div class="controls">
							<textarea class="span7" type="text" name="body" id="body" rows="24"><%= @chapter.body %></textarea>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for=""></label>
						<div class="controls">
							<input class="btn btn-small btn-primary" type="submit" value="Save" /> &nbsp; <a class="btn btn-small" href="/admin/manuals/<%= @manual.id %>/sections/<%= @section.id %>/chapters">Cancel</a> &nbsp; <a class="btn btn-small btn-danger delete" href="/admin/manuals/<%= @manual.id %>/sections/<%= @section.id %>/chapters/<%= @id %>/delete">Delete</a>
						</div>
					</div>

				</fieldset>
			</form>
	</div>

</div>