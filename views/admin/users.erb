<div class="row">
	
	<div class="span3">
		<%= erb :'admin/navigation', layout: false %>
	</div>
	
	<div class="span9">
		<ul class="breadcrumb">
			<li>Admin <span class="divider">/</span></li>
			<li class="active">Users</li>
		</ul>
		
		<form class="form-search" method="get" action="/admin/users">
			<input type="text" class="input-xlarge search-query" name="search" value="<%= params[:search] %>" />
			<button type="submit" class="btn">Search</button>
			<span class="help-inline">Use @ to search email addresses.</span>
		</form>
		
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th><a class="btn btn-mini btn-success" href="/admin/users/new"><i class="icon-plus icon-white"></i></a></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.name %> <%= '<span class="label label-inverse">Admin</span>' if user.admin? %></td>
						<td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
						<td><a href="/admin/users/<%= user.id %>">Edit</a></td>
					</tr>
				<% end %>
		  </tbody>
		</table>
	</div>
	
</div>