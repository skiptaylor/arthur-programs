<div class="row">

	<div class="span3">
		<%= erb :'admin/navigation', layout: false %>
		<form method="get" class="well">
			<p><%= @start.to_fields 'start' %></p>
			<p><%= @end.to_fields 'end' %></p>
			<p>
				<button type="submit" class="btn btn-primary">Filter</button>
				<a href="<%= request.url %><%= params.count > 0 ? '&export=true' : '?export=true' %>" class="btn">Export</a>
			</p>
		</form>
	</div>

	<div class="span9">
		<ul class="breadcrumb">
			<li>Admin <span class="divider">/</span></li>
			<li class="active">Purchases</li>
		</ul>

		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Date</th>
					<th>Amount</th>
					<th>Item</th>
					<th>User</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @purchases.each do |purchase| %>
					<tr>
						<td><%= purchase.created_at.display :american_day %></td>
						<td><%= purchase.amount.dollarize %></td>
						<td>
							<%= purchase.package %>
							<br />
							<span style="font-size: 90%;"><%= purchase.options %></span>
						</td>
						<td>
							<%= purchase.user.name %><br />
							<a href="/admin/users/<%= purchase.user.id %>"><%= purchase.user.email %></a><br />
							<a href="https://manage.stripe.com/#payments/<%= purchase.stripe_id %>" target="_blank"><%= purchase.stripe_id %></a>
						</td>
						<td style="text-align: right;">
							<a href="/admin/purchases/<%= purchase.id %>" class="btn btn-mini btn-info"><i class="icon icon-edit icon-white"></i></a>
							<br />
							<%= '<span class="label label-warning">To Be Shipped</span>' if purchase.needs_shipping? %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

	</div>

</div>