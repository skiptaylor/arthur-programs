<noscript>
		<meta HTTP-EQUIV="REFRESH" content="0; url=https://www.counselorexams.com/nojs">
</noscript>

<script src="/js/checkout.js"></script>

<div class="page-header">
	<h1>
		Checkout
		&nbsp;
		<small><%= @product_name %></small>
	</h1>
</div>

<form method="post" id="payment-form">

	<div class="row">
		<div class="span12">
			<%= erb :"checkout/products/#{params[:product]}", layout: false %>
		</div>
	</div>

	<div class="row">
		<div class="span6">
			<%= erb :'checkout/forms/account', layout: false, locals: { user: @user } %>
		</div>
		<div class="span6">
			<%= erb :'checkout/forms/credit_card', layout: false %>
		</div>
	</div>

	<div class="row">
		<div class="span12">
			<%= erb :'checkout/forms/summary', layout: false, locals: { user: @user } %>
		</div>
	</div>

</form>