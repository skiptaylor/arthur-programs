<script src="/js/cards.js"></script>

<div class="row">
	<div class="span12">
		<h1>
			<%= params[:exam] %> Flash Cards
			<small><%= params[:chapter] %></small>

		</h1>
	</div>
</div>

<hr />

<% @cards.each_with_index do |card, i| %>

	<div class="row current-card" style="<%= hidden unless i == 0 %>">
		<div class="span12">
			<div class="row">
				<div class="span2">
					<br /><br />
					<a href="#" class="last pull-right"><img src="/img/arrow-left.png" /></a>
					
				</div>
				<div class="span8">
			  	<div class="flashcard">
				  	<center><h2><%= card.term %></h2></center>
				  	<hr style="margin: 0;" />
				  	<p><%= markdown card.definition %></p>
				  </div>
				 <br />
				  <p style="text-align: center;"><a href="" class="btn btn-mini pull-left">Start over</a>
				  <img src="/img/arrow-reveal.png" />
				  <a href="/nce/glossary" class="btn btn-mini pull-right">Glossary</a>
				  </p>
				</div>
				<div class="span2">
					<br /><br />
					<a href="#" class="next"><img src="/img/arrow-right.png" /></a>
				
				</div>
			</div>
		</div>
	</div>

<% end %>

<div class="row current-card" style="display: none;">
	<div class="span6 offset3">
		<h4 style="text-align: center;">No more cards</h4><br /><br />
		<a href="" class="btn btn-mini">Start over</a>
		<a href="/nce/glossary" class="btn btn-mini pull-right">Glossary</a>
	</div>
</div>