<script src="/js/cards.js"></script>

<div class="row">
	<div class="span12">
		<h2 class="visible-phone">
			<%= params[:exam] %> Flash Cards
			<small><%= params[:chapter] %></small>
		</h2>
		<p class="pull-right">
			<a href="/<%= params[:exam].downcase %>/glossary" class="btn">Glossary</a> &nbsp; 
			<a href="<%= request.url %>" class="btn btn-success">Start over</a>
		</p>
		<h1 class="hidden-phone">
			<%= params[:exam] %> Flash Cards
			<small><%= params[:chapter] %></small>
		</h1>
		
	</div>
</div>

<hr />

<% @cards.each_with_index do |card, i| %>

	<div class="row current-card" style="<%= hidden unless i == 0 %>">
		<div class="span12 hidden-phone">
			<div class="row">
				<div class="span2">
					<p><a href="#" class="last pull-right" style="<%= hidden if i == 0 %>"><img src="/img/arrow-left.png" /></a></p>
				</div>
				<div class="span8">
					<div class="flashcard">
				  	<center><h2><%= card.term %></h2></center>
				  	<hr style="margin: 0;" />
				  	<span class="definition">
						<% unless card.short_def == '' %>
					  	<%= markdown card.short_def %>
						<% else %>
						<%= markdown card.definition %>
						<% end %>
					  </span>
				  </div>
				  <br />
				  
				  <p style="text-align: center;"><img src="/img/arrow-reveal.png" /></p>
				</div>
				<div class="span2">
					<a href="#" class="next"><img src="/img/arrow-right.png" /></a>
				</div>
			</div>
		</div>
		
		<div class="span12 visible-phone">	
			<div class="row">
				<div class="span12">
					
					<a href="#" class="last pull-left btn btn-mini" style="<%= hidden if i == 0 %>">Previous</a>
					<a href="#" class="next pull-right btn btn-mini">Next</a>
					<br /><br />
					
			  	<div class="flashcard">
				  	<center><h2><%= card.term %></h2></center>
				  	<hr style="margin: 0;" />
				  	<span class="definition">
					  	<%= markdown card.short_def %>
					  </span>
				  </div>
				  
				  <br />
				  <p style="text-align: center;"><img src="/img/arrow-reveal.png" /></p>
				  
				</div>
			</div>
		</div>
	</div>

<% end %>

<div class="row current-card" style="display: none;">
	<div class="span6 offset3">
		<h4 style="text-align: center;">No more cards</h4><br /><br />
	</div>
</div>