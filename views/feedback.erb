<div class="row">
	<div class="span12">
		<div class="page-header visible-desktop">
			<h1 class="oswald" style="font-size: 2.7em; margin: 0 0 0.5em 0;">Questions & Comments
			<small>We'd love to hear what you have to say</small></h1>
		</div>
		
	</div>
</div>

<form class="form-horizontal" method="post">

	<div class="control-group" id="name-group">
		<label class="control-label" for="name">Names</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="name" name="name" />
		</div>
	</div>
	
	<div class="control-group" id="name_email">
		<label class="control-label" for="email">Email name</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="name_email" name="name_email" />
		</div>
	</div>

	<div class="control-group" id="email-group">
		<label class="control-label" for="email">Email address</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="email" name="email" />
		</div>
	</div>

	<div class="control-group" id="subject-group">
		<label class="control-label" for="subject">Subject</label>
		<div class="controls">
			<select id="subject" name="subject">
				<option value="Counselor Exams feedback: I have a question">I have a question</option>
				<!-- <option value="Counselor Exams feedback: Help, I'm stuck!">Help, I'm stuck!</option> -->
				<option value="Counselor Exams feedback: I have a comment">I have a comment</option>
				<option value="Counselor Exams feedback: Testimonial">Testimonial</option>
			</select>
		</div>
	</div>

	<div class="control-group" id="msg-group">
		<label class="control-label" for="msg">Message</label>
		<div class="controls">
			<textarea name="msg" id="msg" class="input-xlarge span6" rows="11"></textarea>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<div class="g-recaptcha" data-sitekey="6Lck-n4UAAAAAIb_PAKYTx-f4Nv5WhPvRKGc9dD2" data-callback="enableBtn"></div>
			<br />
			<% unless params[:name_email] == "" %>
			<input type="submit" id="submit" class="btn btn-primary"  value="Submit" />
			<% end %>
		</div>
	</div>

</form>



<script>

	document.getElementById("submit").disabled = true;
	function enableBtn(){
	    document.getElementById("submit").disabled = false;
	   }

</script>
