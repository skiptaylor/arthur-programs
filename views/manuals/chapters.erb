
<div class="row">
	<div class="span3 affix">
		
		<%= erb :'manuals/nav', layout: false %>
		
		<h4 class="oswald" style="color: gray; margin: 0.3em 0 0.8em 0;">Chapters</h4>
		<% @chapter.sort_by(&:chapter_number).each do |chapter| %>
			<a href="#<%= chapter.id %>" class="chapter-link"><p><%= chapter.chapter_title %></p></a>
		<% end %>

			
		<p style="margin: 1em 0 0 1em;">
			<a href="#top"><img src="/img/phone-up-pointer.svg" /></i></a><br /><br /><br />
		</p>
	</div>

	<div class="span9 offset3 md">
	
		<h3 class="oswald" style="color: #1c89de; margin: 0.9em 0 0.5em 0;">Study Program Guide prepared for <%= @user.name %></h3>
		<h1 style="font-size: 2.5em;"><%= @manual.name %></h1>
		<hr />
		
	 <% @chapter.sort_by(&:chapter_number).each do |chapter| %>
	 <% if chapter.chapter_title != "" %>
	 <a name="<%= chapter.id %>" style="color: black; text-decoration: none;"><h1 style="font-size: 2em;"><%= chapter.chapter_title %></h1></a>
	 <% else %>
	 <h2 style="margin-top: 0;"><%= chapter.sub_chapter_title %></h2>
	 <% end %>
	 <%= markdown chapter.body %>
	 <br />
	 <% end %>
			
	</div>
</div>



		
		
		